<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.desafio.dhfoodd2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DHFoodD2">
        <activity android:name="com.desafio.dhfoodd2.view.activity.DetalheEscolhaMenuActivity"
            android:theme="@style/AppTheme.NoBar"/>
        <activity
            android:name="com.desafio.dhfoodd2.view.activity.DetalheMenuActivity"
            android:theme="@style/AppTheme.NoBar"/>
        <activity android:name="com.desafio.dhfoodd2.view.activity.HomeActivity"/>
        <activity
            android:name="com.desafio.dhfoodd2.view.activity.RegisterActivity"
            android:label="Register"
            android:parentActivityName="com.desafio.dhfoodd2.view.activity.LoginActivity" />
        <activity
            android:name="com.desafio.dhfoodd2.view.activity.SplashActivity"
            android:theme="@style/AppTheme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.desafio.dhfoodd2.view.activity.LoginActivity"
            android:launchMode="singleTop"/>
    </application>

</manifest>