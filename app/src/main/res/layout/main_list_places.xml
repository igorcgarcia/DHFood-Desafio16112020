<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainListContainer">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="13dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivListProduct"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/heightDefault_ImagePlace"
                            android:src="@drawable/ic_launcher_background"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/image_place"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginBottom="14dp"
                            android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvListName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/placeNameDefault"
                                    android:textColor="@color/darkblue"
                                    android:textSize="@dimen/placePrimaryTextDefault"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/tvListAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/placeAddressDefault"
                                    android:textSize="@dimen/placeSecundaryText_Default"
                                    android:textColor="@color/grey"
                                    />
                                <TextView
                                    android:id="@+id/tvListClose"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/placeClosedDefault"
                                    android:textSize="@dimen/placeSecundaryText_Default2"
                                    android:textColor="@color/grey"
                                    />

                        </LinearLayout>

                </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>