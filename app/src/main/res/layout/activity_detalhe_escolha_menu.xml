<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.desafio.dhfoodd2.view.activity.DetalheEscolhaMenuActivity">

    <ImageView
        android:id="@+id/ivMenuDetalhe"
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/image_menu_escolha_destaque"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image_shadow"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvMenuEscolhaDestaqueName"
        app:layout_constraintBottom_toBottomOf="@id/tvMenuEscolhaDestaqueName"
        android:contentDescription="@string/shadow"
        />

    <ImageView
        android:id="@+id/ivMenuDetalheBack"
        style="@style/DHFButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_buttom"
        />

    <TextView
        android:id="@+id/tvMenuEscolhaDestaqueName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="11dp"
        android:text="@string/menuEscolhaText"
        android:textSize="@dimen/placePrimaryTextDefault"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivMenuDetalhe"
        />

    <TextView
        android:id="@+id/tvMenuDestaqueDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvMenuEscolhaDestaqueName"
        android:text="@string/menuDescricaoText"
        android:textColor="@color/grey"
        android:elegantTextHeight="true"
        android:textSize="@dimen/menuDescriptionDefault"
        />

</androidx.constraintlayout.widget.ConstraintLayout>