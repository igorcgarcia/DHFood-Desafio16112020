<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DHFoodD2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/bluebar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DHFButton">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="DHFButtonBack">
        <item name="srcCompat">@drawable/ic_baseline_arrow_back_24</item>
        <item name="background">?attr/selectableItemBackground</item>
    </style>

</resources>